<h1>Daaaaaa Beers!</h1>
<div class="row">
  <% @beers.each do |beer| %>
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <img src="<%= beer.image %>">
      <div class="caption">
          <h3><%= beer.name %></h3>
          <h4><%= beer.description %></h4>
          <%= link_to "More Info", beer, class:"btn btn-default" %>
      </div>
    </div>
  </div>
<% end %>

</div>

<center><%= link_to "Add Beer", new_beer_path, class:"btn btn-primary" %></center>